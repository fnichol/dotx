! (red)             Red3
*color1:            #cf6a4c
! (green)           Green3
*color2:            #8f9d6a
! (yellow)          Yellow3
*color3:            #cda869
! (blue)            Blue3
*color4:            #7587a6
! (magenta)         Magenta3
*color5:            #9b859d
! (cyan)            Cyan3
*color6:            #afc4db
