! override the default terminal launching binding so we can re-use the `Return`
! binding in `~/.config/regolith/i3/config.d/00_terminal_launcher`
i3-wm.binding.terminal: Ctrl+Shift+Return

! set bar position to top
i3-wm.bar.position: top

! window focus follows your mouse movements as the mouse crosses window borders
i3-wm.gaps.focus_follows_mouse: yes

! use dunst for desktop notifications
i3-wm.program.notifications: /usr/bin/dunst
